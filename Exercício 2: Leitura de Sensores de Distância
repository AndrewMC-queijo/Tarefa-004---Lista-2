#include <stdio.h>

int main() {
    float distancia;
    char continuar;

    printf("Leitura de Sensores de Dist창ncia\n");
    printf("=================================\n");

    do {
        printf("\nDigite a dist창ncia medida pelo sensor (em cm): ");
        scanf("%f", &distancia);

        if (distancia < 10) {
            printf("Alerta: Dist창ncia abaixo de 10 cm! Sensor encerrado.\n");
            break;
        }

        printf("Dist창ncia medida: %.2f cm\n", distancia);

        printf("Deseja continuar? (s/n): ");
        scanf(" %c", &continuar);

    } while (continuar == 's');

    printf("Leitura de sensores encerrada.\n");

    return 0;
}
